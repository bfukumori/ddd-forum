{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@domain/*": ["./src/domain/*"],
      "@core/*": ["./src/core/*"],
      "@test/*": ["./test"]
    },
    "types": ["vitest/globals"]
  }
}
